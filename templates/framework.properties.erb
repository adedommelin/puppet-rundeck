# framework.properties -
#

# ----------------------------------------------------------------
# Rundeck server connection information
# ----------------------------------------------------------------

framework.server.name = <%= scope.lookupvar('rundeck::server_name') %>
framework.server.hostname = <%= scope.lookupvar('rundeck::server_name') %>
framework.server.port = <%= scope.lookupvar('rundeck::port') %>
framework.server.url = http://<%= scope.lookupvar('rundeck::server_name') %>:<%= scope.lookupvar('rundeck::port') %>
# Username/password used by CLI tools.
framework.server.username = <%= scope.lookupvar('rundeck::username') %>
framework.server.password = <%= scope.lookupvar('rundeck::password') %>

# ----------------------------------------------------------------
# Installation locations
# ----------------------------------------------------------------

rdeck.base=/var/lib/rundeck

framework.projects.dir=<%= scope.lookupvar('rundeck::project_dir') %>
framework.etc.dir=<%= scope.lookupvar('rundeck::config_dir') %>
framework.var.dir=<%= scope.lookupvar('rundeck::data_dir') %>/var
framework.tmp.dir=<%= scope.lookupvar('rundeck::data_dir') %>/var/tmp
framework.logs.dir=<%= scope.lookupvar('rundeck::data_dir') %>/logs
framework.libext.dir=<%= scope.lookupvar('rundeck::data_dir') %>/libext

# ----------------------------------------------------------------
# SSH defaults for node executor and file copier
# ----------------------------------------------------------------

framework.ssh.keypath = <%= scope.lookupvar('rundeck::data_dir') %>/.ssh/id_rsa
framework.ssh.user = rundeck

# ssh connection timeout after a specified number of milliseconds.
# "0" value means wait forever.
framework.ssh.timeout = 0
